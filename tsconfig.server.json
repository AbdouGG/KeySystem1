{
    "compilerOptions": {
      "target": "ES2022",
      "module": "CommonJS",
      "outDir": "dist/server",
      "rootDir": "./server",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true
    },
    "include": ["server/**/*"],
    "exclude": ["src/**/*", "node_modules"]
  }